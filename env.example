# Server Settings
HOST=0.0.0.0
PORT=80
DEBUG=False

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Rate Limiting (защита от спама и перерасхода на LLM)
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_LLM_REQUESTS_PER_MINUTE=10

# DeepSeek LLM API - Primary (artemox)
DEEPSEEK_API_KEY=your-artemox-api-key-here
DEEPSEEK_BASE_URL=https://api.artemox.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TIMEOUT=10
DEEPSEEK_MAX_TOKENS=150
DEEPSEEK_TEMPERATURE=0.7

# DeepSeek LLM API - Fallback (deepseek official)
DEEPSEEK_FALLBACK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_FALLBACK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_FALLBACK_MODEL=deepseek-chat

# Retry settings
LLM_MAX_RETRIES=2

# Yandex Music
YANDEX_MUSIC_TOKEN=your-yandex-music-token-here

